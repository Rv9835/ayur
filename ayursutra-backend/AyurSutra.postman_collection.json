          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/auth/exchange",
          "host": ["{{BASE_URL}}"],
          "path": ["api", "auth", "exchange"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"uid\": \"{{FIREBASE_UID}}\",\n  \"email\": \"user@example.com\",\n  \"name\": \"User\"\n}"
        }
      }
    },
    {
